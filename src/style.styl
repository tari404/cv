$black = #0f1418

body
  margin 0
  font-family 'PingFang SC', 'Microsoft YaHei',
canvas
  background-color $black
a
  text-decoration none
  color inherit
  cursor pointer
  &:focus
    color inherit
  &:active
    color inherit
  &:visited
    color inherit
p
  margin 0

#banner
  position fixed
  width 100%
  height 68vh
  top -8vh
  left 0
  i
    position fixed
    top 8px
    right 8px
    font-size 24px
    color #fff
    cursor pointer
    opacity .5
    transition .2s
    &:hover
      opacity .8

#body
  position relative

#avatar
  margin-left 10vw
  max-width 90vw
  height 40vh
  overflow hidden
  color #fff
  position relative
  .me
    position absolute
    bottom -200px
    left 20px
    z-index 1
    width 250px
    height 551px
    background no-repeat url('./assets/me.png') top / contain
    transition left .2s
  .intro
    position absolute
    bottom 20px
    left 0
    background-color rgba($black, .2)
    padding 30px 300px 10px
    border-radius 100px
  .my-name
    margin 0
    font-size 40px
    line-height 1em
    position relative
    color rgba(#fff, .9)
    &:before
      content 'Felix Cai'
      position absolute
      top -26px
      left 0
      font-size 72px
      line-height 1em
      white-space nowrap
      font-weight 800
      color rgba(#fff, .1)
      text-transform uppercase
  p
    margin 10px 0 0
  a
    display flex
    font-size: 14px
    align-items center
    opacity .5
    transition .2s
    i
      font-size 20px
      margin-right 6px
    &:hover
      opacity .8

#container
  padding 30px 10vw
  display flex
  flex-direction column
  background-color #fff
  font-size 18px
  line-height 1.8em
  font-weight 200
  position relative
  >div
    margin 30px 0
    display flex
    align-items center
    &:hover
      .icon
        filter grayscale(0)
        transform scale(1.05)
        transition all .4s cubic-bezier(0.43, -0.68, 0.74, 0.05)
      i
        width 28px
        height 28px
    >p
      flex 1 1 auto
  .icon
    margin 0 60px
    flex 0 0 180px
    height 100px
    background-repeat no-repeat
    background-size contain
    background-position center
    filter grayscale(.8)
    transition all .2s ease
  i
    flex 0 0 6px
    margin 30px
    width 6px
    height 6px
    background-color $black
    border-radius 3px
    transition .2s .1s ease-out

#xmas
  display flex
  justify-content space-between
  align-items center
  background-color #0f1418

#xmas
  position relative
  span
    width 12px
    height 12px
    display block
    border-radius 50%
    border none
    background-color #fff
.xmas-img
  width 70vw
  height 36vw
  background no-repeat url('./assets/xmas.jpeg') left center / contain
.xmas-tree
  width 26vw
  height 36vw
  background-color $black

.slogan
  margin 0
  padding 20px 0 80px
  background-color #fff
  text-align center
  font-size 40px
  color rgba($black, .8)
  font-family 'ZCOOL XiaoWei', serif

footer
  padding 4px 0
  background-color #fff
  font-size 14px
  color rgba($black, .4)
  text-align center

@media screen and (max-width 900px)
  #avatar
    .me
      left 220px
    .intro
      margin 0
      padding 30px 0 10px
      width 80vw
      box-sizing border-box
      p
        position relative
        z-index 2
  #container
    >div
      flex-direction column
    .icon
      margin 0 60px 20px
      flex 0 0 100px
      width 180px
      
